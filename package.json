{
  "name": "product-info-extractor-mcp",
  "version": "1.0.0",
  "description": "MCP Server for extracting comprehensive product information from e-commerce websites with browser instance reuse for optimal performance",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "product-info-extractor-mcp": "src/index.js"
  },
  "scripts": {
